<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiteDbDemo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry Placeholder="Enter you name" Text="{Binding Name}" />
            <Entry Placeholder="Enter you company name" Text="{Binding Company}" />
            <Entry Placeholder="Enter where you live" Text="{Binding City}" />

            <Button
                Text="Save"
                HorizontalOptions="Center" Command="{Binding Save}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

